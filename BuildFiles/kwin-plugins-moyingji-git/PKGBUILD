# Maintainer: MoYingJi <moyingjiaw@outlook.com>

pkgname=kwin-plugins-moyingji-git
pkgver=1
pkgrel=1
pkgdesc="本人在使用的一些 无需编译的 KDE 插件"
arch=('any')
depends=(kwin)
source=(
	git+https://github.com/kde-yyds/kwin-effect-scalefromcursor
	git+https://github.com/kde-yyds/kwin-effect-foldingpopups
)
sha256sums=(SKIP SKIP)

package() {
	export DESTDIR="$pkgdir/usr/share"

	cd kwin-effect-scalefromcursor
	./install.sh
	cd ..

	cd kwin-effect-foldingpopups
	./install.sh
	cd ..
}

